@model WeddingVibes.Models.Menu.Menu

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Delete Menu";
}


<div class="container" style="margin-top: 20px;">
    <div class="row">
        <div class="col-md-12 col-md-offset-3">
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-table"></i>
                    @ViewData["Title"]
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8 col-md-offset-1">
                            <div>                            
                                <h3>Are you sure you want to delete this?</h3>
                                <hr />
                                <dl class="dl-horizontal">
                                    <dt>
                                        @Html.DisplayNameFor(model => model.MenuName)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.MenuName)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.MenuPrice)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.MenuPrice)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.MenuItems)
                                    </dt>
                                    <dd>
                                        @{
                                            string list = "";
                                            if (Model.MenuItems.Count > 0)
                                            {
                                                list = Model.MenuItems.Select(m => m.ItemName).Aggregate((a, x) => a + "," + x);
                                            }
                                        }
                                        @Html.DisplayFor(modelItem => list)
                                    </dd>
                                </dl>
                            </div>

                        </div>
                    </div>

                    <div>
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Delete" class="btn btn-default" /> |
                            <a asp-action="Index">Back to List</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>