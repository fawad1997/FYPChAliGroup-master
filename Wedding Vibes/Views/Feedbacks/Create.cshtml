@model WeddingVibes.Models.Feedback.Feedback

@{
    ViewData["Title"] = "Feedback";
    Layout = "_Layout";
}

<div class=" container" style="margin-top: 20px;">
    <div class="col-md-6 col-md-offset-2 ">
        <div class="panel panel-default ">
            <div class="panel-body">
                <h4>Feedback</h4>
                <p>Please gives feedback how you feel about ours services</p>
                <hr />
                <div class="row">
                    <div class="col-md-12 ">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Message" class="control-label"></label>
                                <textarea cols="3" rows="5" asp-for="Message" class="form-control"></textarea>
                                <span asp-validation-for="Message" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ApplicationUser.Email" class="control-label"></label>
                                <input asp-for="ApplicationUser.Email"  readonly="readonly" class="form-control" />
                                <input asp-for="ApplicationUserId" value="@Model.ApplicationUser.Id" type="hidden"/>
                                <span asp-validation-for="ApplicationUser.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-default" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
